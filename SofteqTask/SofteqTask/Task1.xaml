<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SofteqTask.Task1"
             Title="Task 1">

    <ScrollView>
        <StackLayout x:Name="stackLayout1">
            <Label Text="Enter x values:" FontSize="Large" FontAttributes="Bold" TextColor="Black" Margin="10, 20, 10, 5"/>
            <Entry x:Name="entryValues" Margin="10, 5, 10, 30" TextColor="Black" />
            <Label Text="Calculate f(x)" FontSize="Medium" TextColor="#0099ff" HorizontalOptions="Center"/>
            <Label Text="Values f(x):" FontSize="Large" FontAttributes="Bold" TextColor="Black" Margin="10, 20, 10, 5"/>

        </StackLayout>
    </ScrollView>
</ContentPage>